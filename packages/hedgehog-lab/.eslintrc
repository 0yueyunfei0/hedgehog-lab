{
  "plugins": ["prettier", "@typescript-eslint"],
  "parser":  "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "tabWidth": 2,
        "semi": true,
        "trailingComma": "none",
        "singleQuote": true,
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "alwaysParens": "avoid",
        "@typescript-eslint/ban-ts-ignore": "off"
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures":{
      "jsx":true
    }
  }
}
